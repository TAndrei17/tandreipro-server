{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"isolatedModules": true,
		"allowImportingTsExtensions": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "bin/**/*", "scripts/**/*", "__tests__/**/*", "src/types/**/*"],
	"exclude": ["node_modules", "dist"]
}
