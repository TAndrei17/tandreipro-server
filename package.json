{
	"name": "backend-atrunkin",
	"version": "1.0.0",
	"description": "TAndrei.pro backend",
	"license": "ISC",
	"author": "Andrei Trunkin",
	"type": "module",
	"main": "app.js",
	"scripts": {
		"ci": "npm ci",
		"build": "tsc",
		"create:admin": "node --loader ts-node/esm scripts/createAdmin.ts",
		"start": "npm run build && node dist/bin/app.js",
		"start:prod": "npm run create:admin && npm run start",
		"dev": "npm run create:admin && node --loader ts-node/esm --no-warnings bin/app.ts",
		"test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest",
		"test-coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"migrate:up": "node-pg-migrate up --dir migrations --ts",
		"migrate:down": "node-pg-migrate down --dir migrations --ts"
	},
	"dependencies": {
		"@types/pg": "^8.16.0",
		"axios": "^1.13.4",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.6",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"pg": "^8.18.0"
	},
	"devDependencies": {
		"@eslint/create-config": "^1.11.0",
		"@eslint/js": "^9.39.2",
		"@stylistic/eslint-plugin": "^5.7.1",
		"@types/axios": "^0.9.36",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.2.0",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"eslint": "^9.39.2",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jest": "^29.12.2",
		"globals": "^17.3.0",
		"jest": "^30.2.0",
		"node-pg-migrate": "^8.0.4",
		"supertest": "^7.2.2",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
